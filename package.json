{
  "name": "superbrag-telegram-bot",
  "private": true,
  "version": "0.1.0",
  "description": "A telegram bot for posting and reminders to post messages to your superbrag instance.",
  "main": "src/index.ts",
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc",
    "watch": "tsc-watch --onSuccess \"node build/index.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daangemist/superbrag-telegram-bot.git"
  },
  "keywords": [
    "superbrag",
    "telegram",
    "bot",
    "build",
    "public",
    "build-in-public",
    "buildinpublic"
  ],
  "author": "daangemist",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/daangemist/superbrag-telegram-bot/issues"
  },
  "homepage": "https://github.com/daangemist/superbrag-telegram-bot#readme",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "unicorn"
    ],
    "rules": {
      "unicorn/filename-case": "error"
    },
    "ignorePatterns": [
      "./bin/*.js"
    ]
  },
  "dependencies": {
    "axios": "^0.25.0",
    "messaging-api-telegram": "^1.1.0",
    "node-cron": "^3.0.0"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/node": "^16.11.24",
    "@types/node-cron": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^5.2",
    "@typescript-eslint/parser": "^5.2",
    "eslint": "^8.1",
    "eslint-plugin-unicorn": "^37.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.4",
    "tsc-watch": "^4.6.0",
    "typescript": "^4.4"
  }
}
